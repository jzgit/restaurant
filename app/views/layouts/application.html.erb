<!DOCTYPE html>
<html>
<head>
  <title>Restaurant</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% display_flashes = true %>
  <% if display_flashes %>
    <div id="flash">
      <% flash.each do |key, value| -%>
        <%- unless key == :action %>
          <div class="alert-message <%= key %>"><%=h value %></div>
        <%- end-%>
      <% end -%>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
